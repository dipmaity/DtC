<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_products"
        android:name="com.example.myapplication.ui.fragments.ProductFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myapplication.ui.fragments.DashboardFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.example.myapplication.ui.fragments.OrdersFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/navigation_sold_products"
        android:name="com.example.myapplication.ui.fragments.SoldProductFragment"
        android:label="@string/title_sold_products"
        tools:layout="@layout/fragment_sold_product" />
</navigation>